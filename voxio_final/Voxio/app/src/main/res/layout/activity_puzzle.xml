<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#c1cbf0"
    tools:context="com.pooppai.joycy.myproject.PuzzleActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageButton6"
            android:layout_gravity="center"
            android:background="@drawable/backarrow"
            android:onClick="closePuzzle"/>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:id="@+id/imageView5"
            android:background="@drawable/voxio" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qustion No"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textColor="#14349e" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/imageView3"
        android:background="#94a5e6" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="bottom">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/radioGroup">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="option1"
                android:gravity="center"
                android:layout_marginLeft="0px"
                android:layout_marginTop="20px"
                android:layout_gravity="center_horizontal"
                android:id="@+id/radioButton"
                android:textColor="#14349e" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="option2"
                android:layout_marginLeft="0px"
                android:layout_marginTop="0px"
                android:layout_gravity="center_horizontal"
                android:id="@+id/radioButton2"
                android:textColor="#14349e" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="option3"
                android:layout_marginLeft="0px"
                android:layout_marginTop="0px"
                android:layout_gravity="center_horizontal"
                android:id="@+id/radioButton3"
                android:textColor="#14349e" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="option4"
                android:layout_marginLeft="0px"
                android:layout_marginTop="0px"
                android:layout_gravity="center_horizontal"
                android:id="@+id/radioButton4"
                android:textColor="#14349e" />
        </RadioGroup>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageButton"
                android:background="@drawable/no"
                android:onClick="closePuzzle"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Score"
                android:layout_marginLeft="60dp"
                android:id="@+id/textView5"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="#14349e" />

            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageButton2"
                android:layout_marginLeft="45dp"
                android:background="@drawable/yes"
                android:onClick="openNext"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
